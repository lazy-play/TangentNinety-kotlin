    <attr format="color|reference" name="colorTextHot"/>
    <attr format="color|reference" name="colorTextTitle"/>
    <attr format="color|reference" name="colorCardBackground"/>
    <attr format="color|reference" name="colorTextTitleClick"/>
    <attr format="color|reference" name="colorSelectBackground"/>
    <attr format="color|reference" name="colorUnselectBackground"/>
